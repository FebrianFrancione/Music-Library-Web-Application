    <xs:element name="AlbumResponse">
        <xs:complexType>
            <xs:sequence minOccurs="0">
                <xs:element ref="n1:album"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="AlbumsResponse">
        <xs:complexType>
            <xs:sequence minOccurs="0" maxOccurs="unbounded">
                <xs:element ref="n1:album"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="AlbumByISRCRequest">
        <xs:annotation>
            <xs:documentation>Query Album by ISRC</xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:attribute name="ISRC" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="AlbumByNameRequest">
        <xs:annotation>
            <xs:documentation>Query an album by name</xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:attribute name="artist_first_name" type="xs:string" use="optional"/>
            <xs:attribute name="artist_last_name" type="xs:string" use="optional"/>
        </xs:complexType>
    </xs:element>

</xs:schema>
