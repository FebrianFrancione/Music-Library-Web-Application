<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning" xmlns:n1="http://www.jpworks.com/album" targetNamespace="http://www.jpworks.com/album" elementFormDefault="qualified" attributeFormDefault="unqualified" vc:minVersion="1.1">

    <xs:element name="album">
        <xs:annotation>
            <xs:documentation>Album personal information</xs:documentation>
        </xs:annotation>
        <xs:complexType>
<!--            <xs:sequence maxOccurs="unbounded">-->
<!--                <xs:element ref="n1:address"/>-->
<!--            </xs:sequence>-->
            <xs:attribute name="ISRC" type="xs:string" use="required"/>
            <xs:attribute name="title" type="xs:string" use="required"/>
            <xs:attribute name="description" type="xs:string" use="required"/>
            <xs:attribute name="year" type="xs:int" use="required"/>
            <xs:attribute name="artist_first_name" type="xs:string" use="required"/>
            <xs:attribute name="artist_last_name" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>

<!--    <xs:element name="address">-->
